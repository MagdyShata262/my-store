{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": false,
    "target": "es2022",
    "module": "preserve",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-store/data-access": ["shared/data/src/index.ts"],
      "@my-store/domain": ["shared/src/index.ts"],
      "@my-store/ui": ["shared/ui/src/index.ts"],
      "@my-store/utils": ["shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
